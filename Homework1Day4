import turtle
import random  # For placing stars randomly

# Setup the screen
turtle.bgcolor("skyblue")

# Create drawing tools
house_turtle = turtle.Turtle()
house_turtle.speed(0)  # Fastest drawing speed
garden_turtle = turtle.Turtle()
garden_turtle.speed(0)
sun_turtle = turtle.Turtle()
sun_turtle.speed(0)
star_turtle = turtle.Turtle()
star_turtle.speed(0)

def draw_rectangle(t, width, height, color):
    t.fillcolor(color)
    t.begin_fill()
    for _ in range(2):
        t.forward(width)
        t.left(90)
        t.forward(height)
        t.left(90)
    t.end_fill()

def draw_triangle(t, length, color):
    t.fillcolor(color)
    t.begin_fill()
    for _ in range(3):
        t.forward(length)
        t.left(120)
    t.end_fill()

def draw_house(x, y):
    # Draw the base of the house
    house_turtle.penup()
    house_turtle.goto(x, y)
    house_turtle.pendown()
    draw_rectangle(house_turtle, 100, 100, "lightgrey")
    
    # Draw the roof
    house_turtle.penup()
    house_turtle.goto(x, y + 100)
    house_turtle.pendown()
    draw_triangle(house_turtle, 100, "maroon")

def draw_garden(x, y, width, height):
    garden_turtle.penup()
    garden_turtle.goto(x, y)
    garden_turtle.pendown()
    draw_rectangle(garden_turtle, width, height, "lightgreen")

def draw_sun():
    sun_turtle.penup()
    sun_turtle.goto(-250, 150)
    sun_turtle.pendown()
    sun_turtle.color("yellow")
    sun_turtle.begin_fill()
    sun_turtle.circle(50)
    sun_turtle.end_fill()

def draw_star(x, y):
    star_turtle.penup()
    star_turtle.goto(x, y)
    star_turtle.pendown()
    star_turtle.color("white")
    star_turtle.begin_fill()
    for _ in range(5):
        star_turtle.forward(20)
        star_turtle.right(144)
    star_turtle.end_fill()

# Hide turtles
house_turtle.hideturtle()
garden_turtle.hideturtle()
sun_turtle.hideturtle()
star_turtle.hideturtle()

# Draw houses and gardens
for i in range(3):
    draw_house(-350 + i * 200, -100)
    draw_garden(-350 + i * 200, -200, 100, 100)

# Draw the sun
draw_sun()

# Draw some stars
for _ in range(10):
    x = random.randint(-300, 300)
    y = random.randint(0, 300)
    draw_star(x, y)

turtle.done()
